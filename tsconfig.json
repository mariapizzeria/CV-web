{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./backend/static/dist",
    "rootDir": "./backend/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./backend/src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "backend/static/dist"]
}